<p id="notice"><%= notice %></p>

<h1>Providers</h1>

<table class="provider--table">
  <thead>
    <tr>
      <% if @records.present? %>
        <th><%= t('activerecord.attributes.provider.name') %></th>
        <th><%= t('activerecord.attributes.provider.contact_name') %></th>
        <th><%= t('activerecord.attributes.provider.contact_number') %></th>
        <th><%= t('activerecord.attributes.bank.name') %></th>
        <th><%= t('activerecord.attributes.bank_account.number') %></th>
        <th colspan="3"><%= t('table.actions') %></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |provider| %>
      <% present(provider) do |provider_presenter| %>
        <tr>
          <td><%= provider_presenter.name %></td>
          <td><%= provider_presenter.contact_name %></td>
          <td><%= provider_presenter.contact_number %></td>
          <td><%= provider_presenter.bank_name %></td>
          <td><%= provider_presenter.bank_account_number %></td>
          <td><%= link_to t('.show'), provider %></td>
          <td><%= link_to t('.edit'), edit_provider_path(provider) %></td>
          <td><%= link_to t('.destroy'), provider, method: :delete, data: { confirm: t('providers.index.delete_confirmation') } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<%== pagy_nav(@pagy) %>

