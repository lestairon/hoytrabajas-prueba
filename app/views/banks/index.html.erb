<p id="notice"><%= notice %></p>

<h1><%= t('activerecord.models.bank').pluralize %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.bank.name') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @banks.each do |bank| %>
      <tr>
        <td><%= bank.name %></td>
        <td><%= link_to t('.show'), bank %></td>
        <td><%= link_to t('.edit'), edit_bank_path(bank) %></td>
        <td><%= link_to t('.destroy'), bank, method: :delete, data: { confirm: t('.delete_confirmation') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('.new'), new_bank_path %>
